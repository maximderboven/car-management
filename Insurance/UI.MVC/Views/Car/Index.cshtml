@using Insurance.Domain
@model IEnumerable<Insurance.Domain.Car>

@{
    ViewBag.Title = "All Cars";
    Layout = "_Layout";
}

<!-- Titel -->
<h2>All Cars</h2>
<!-- tabel -->
<table class="table">
  <tr>
    <th>Brand</th>
    <th>Fuel</th>
      <th>Seats</th>
      <th>Miles</th>
      <th>Price</th>
  </tr>
  @foreach (var car in Model)
  {
      <tr>
          <td>@car.Brand</td>
          <td>@car.Fuel</td>
          <td>@car.Seats</td>
          <td>@car.Mileage</td>
          @{
              var PurchasePrice = car.PurchasePrice != null ? car.PurchasePrice.ToString() : "Not Known";
          }
          <td>@PurchasePrice</td>
          <td><a asp-controller="Car" asp-action="Details" asp-route-numberplate="@car.NumberPlate">Details</a></td>
      </tr>
  }
</table>

